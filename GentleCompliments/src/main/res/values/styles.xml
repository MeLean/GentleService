<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/screen_back</item>

</style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="textStyle">
        <item name="android:textColor">@color/colorDarkGrey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="customButton" parent="textStyle">
        <item name="android:padding">@dimen/padding_text_small</item>
        <item name="android:background">@drawable/custom_btn_background</item>
    </style>

    <style name="customActivity" parent="textStyle">
        <item name="android:background">@drawable/activity_gradient_background</item>
    </style>

    <style name="TextHeading" parent="textStyle">
        <item name="android:textSize">@dimen/heading_size</item>
    </style>

    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/middle_margin</item>
        <item name="android:background">@color/colorDarkGrey</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorDarkGrey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="spinnerDropDownStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorDarkGrey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:background">@drawable/activity_gradient_background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RightBottomFragmentActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_gravity">right|bottom</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
    </style>
</resources>
